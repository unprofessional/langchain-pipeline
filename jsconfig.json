{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,   // Keep this off to avoid TypeScript-style checks
    "noImplicitAny": false,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@langchain/core/*": ["node_modules/@langchain/core/*"],
      "@langchain/community/*": ["node_modules/@langchain/community/*"]
    }
  },
  "include": ["src/**/*"]
}
